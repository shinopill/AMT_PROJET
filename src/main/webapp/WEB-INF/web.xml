<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
		 http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <display-name>Archetype Created Web Application</display-name>
    <servlet>
        <servlet-name>AdminServlet</servlet-name>
        <servlet-class>presentation.AdminServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegistrationServlet</servlet-name>
        <servlet-class>presentation.RegistrationServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PresentationServlet</servlet-name>
        <servlet-class>presentation.ViewServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>session.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>session.LogoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProfilServlet</servlet-name>
        <servlet-class>presentation.ProfilServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ApplicationServlet</servlet-name>
        <servlet-class>presentation.ApplicationServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PasswordServlet</servlet-name>
        <servlet-class>presentation.PasswordServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EditAppServlet</servlet-name>
        <servlet-class>app.EditAppServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteAppServlet</servlet-name>
        <servlet-class>app.DeleteAppServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ResetPwdServlet</servlet-name>
        <servlet-class>app.ResetPwdServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>AdminServlet</servlet-name>
        <url-pattern>/admin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegistrationServlet</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PresentationServlet</servlet-name>
        <url-pattern>/view</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProfilServlet</servlet-name>
        <url-pattern>/profil</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ApplicationServlet</servlet-name>
        <url-pattern>/appregister</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PasswordServlet</servlet-name>
        <url-pattern>/password</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EditAppServlet</servlet-name>
        <url-pattern>/edit</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteAppServlet</servlet-name>
        <url-pattern>/deleteapp</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ResetPwdServlet</servlet-name>
        <url-pattern>/reset</url-pattern>
    </servlet-mapping>

    <filter>
        <filter-name>AuthentificationFilter</filter-name>
        <filter-class>session.AuthenticationFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>AuthentificationFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
</web-app>
